#!/bin/bash

# Allclean script to remove output files and result directories
# Usage: ./Allclean

echo "ğŸ§¹ Starting cleanup process..."

# Remove .out and .err files
echo "ğŸ—‘ï¸  Removing .out and .err files..."
rm -f *.out *.err
if [ $? -eq 0 ]; then
    echo "âœ… Removed .out and .err files"
else
    echo "âš ï¸  No .out or .err files found"
fi

# Remove melt_pool_results directory
if [ -d "melt_pool_results" ]; then
    echo "ğŸ—‘ï¸  Removing melt_pool_results directory..."
    rm -rf melt_pool_results
    echo "âœ… Removed melt_pool_results directory"
else
    echo "âš ï¸  melt_pool_results directory not found"
fi

# Remove melt_pool_results_automated directory
if [ -d "melt_pool_results_automated" ]; then
    echo "ğŸ—‘ï¸  Removing melt_pool_results_automated directory..."
    rm -rf melt_pool_results_automated
    echo "âœ… Removed melt_pool_results_automated directory"
else
    echo "âš ï¸  melt_pool_results_automated directory not found"
fi

# Remove any plots directory if it exists (from the enhanced analysis)
if [ -d "plots" ]; then
    echo "ğŸ—‘ï¸  Removing plots directory..."
    rm -rf plots
    echo "âœ… Removed plots directory"
fi

# Remove results.csv if it exists
if [ -f "results.csv" ]; then
    echo "ğŸ—‘ï¸  Removing results.csv..."
    rm -f results.csv
    echo "âœ… Removed results.csv"
fi

echo "ğŸ‰ Cleanup completed!"
echo ""
echo "Current directory contents:"
ls -la
