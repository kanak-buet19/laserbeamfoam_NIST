FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1.0;

vertices
(
    (0          0          0)         // 0 ------2mm length , 1 mm width, 0.5mm patching 
    (1.84e-3    0          0)         // 1 
    (1.84e-3    1.14e-3    0)         // 2
    (0          1.14e-3    0)         // 3
    (0          0          0.6e-3)   // 4
    (1.84e-3    0          0.6e-3)   // 5
    (1.84e-3    1.14e-3    0.6e-3)   // 6
    (0          1.14e-3    0.6e-3)   // 7
);

blocks
(
    // ≈6 µm resolution:
    //  1.00 mm / 168 ≃ 5.95 µm
    //  2.00 mm / 336 ≃ 5.95 µm
    //  0.50 mm / 84  ≃ 5.95 µm
    hex (0 1 2 3 4 5 6 7) (184 114 60) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    back
    {
        type patch;
        faces ((0 4 7 3));
    }
    front
    {
        type patch;
        faces ((1 2 6 5));
    }
    leftWall
    {
        type patch;
        faces ((0 1 5 4));
    }
    rightWall
    {
        type patch;
        faces ((3 7 6 2));
    }
    topWall
    {
        type patch;
        faces ((4 5 6 7));
    }
    bottomWall
    {
        type wall;
        faces ((0 3 2 1));
    }
);

mergePatchPairs
(
);

